        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:background="@drawable/message_round_corners"
        android:layout_marginRight="12dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>